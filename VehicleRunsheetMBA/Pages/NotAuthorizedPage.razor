@using System.Timers
@using VehicleRunsheetMBAProj.Utilities
<div class="row">
    <h1>Please Login..</h1>
</div>
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-info btn-block" href="/identity/account/login">Login</a>
    </div>
</div>
<br/>
@if (showEasterEgg)
{
    <img src="rubbish.gif"/>
}
<h2>Mobile Bins Australia - Runsheet App</h2>

@code
{
    bool showEasterEgg = false;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        var timer = new Timer(5000);
        timer.Elapsed += TimerElapsedHandler;
        timer.Enabled = true;
    }

    private void TimerElapsedHandler(object o, ElapsedEventArgs e)
    {
        showEasterEgg = true;
        InvokeAsync(StateHasChanged);
    }
}
